<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apod_graph"
    app:startDestination="@id/APODFragment">

    <fragment
        android:id="@+id/APODFragment"
        android:name="com.listocalixto.dailycosmo.ui.apod.APODFragment"
        android:label="fragment_apod"
        tools:layout="@layout/fragment_apod" >
        <action
            android:id="@+id/action_APODFragment_to_APODDetailsActivity2"
            app:destination="@id/APODDetailsActivity2" />
    </fragment>
    <activity
        android:id="@+id/APODDetailsActivity2"
        android:name="com.listocalixto.dailycosmo.ui.apod_details.APODDetailsActivity"
        android:label="activity_apod_details"
        tools:layout="@layout/activity_apod_details" >
        <argument
            android:name="copyright"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
        <argument
            android:name="explanation"
            app:argType="string" />
        <argument
            android:name="hdurl"
            app:argType="string" />
        <argument
            android:name="media_type"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="url"
            app:argType="string" />
    </activity>
</navigation>